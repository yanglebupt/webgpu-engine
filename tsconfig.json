{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "types": ["@webgpu/types"]
  },
  "include": ["src"],
  "exclude": [
    "src/examples/11-计算 shader 的高级用法/**/*.ts",
    "src/examples/04-贴图/**/*.ts",
    "src/examples/05-加载贴图/**/*.ts",
    "src/examples/09-cubemap贴图/**/*.ts",
    "src/examples/15-IBL-BRDF 重要性采样/**/*.ts",
    "src/examples/16-IBL-重要性采样/**/*.ts",
    "src/tools/loaders/ObjLoader/index.ts",
    "docs"
  ]
}
